<div class='panel'>
  <div class='panel-body'>

<%= puts @stat %>
<form method='POST'>
    <!-- FIRST NAME-->
    <div class="form-group">
      <label  for="first_name">First Name</label>
      <input id="first_name" name="user[first_name]" type="text" placeholder="First Name" class="form-control" required="" value='<%= @user.first_name %>'>
      <%= puts @stat %><!-- <span class="help-block">First Name</span> -->
    </div>

    <!-- LAST NAME-->
    <div class="form-group">
      <label for="last_name">Last Name</label>
      <input id="last_name" name="user[last_name]" type="text" placeholder="Last Name" class="form-control" required="" value='<%= @user.last_name %>'>
      <!-- <span class="help-block">Last Name</span> -->
    </div>

    <!-- TELEPHONE-->
    <div class="form-group">
      <label for="tel">Tel</label>
      <input id="tel" name="user[tel]" type="text" placeholder="Tel" class="form-control" required="" value='<%= @user.tel %>'>
      <!-- <span class="help-block">Tel</span> -->
    </div>

    <!-- EMAIL-->
    <div class="form-group">
      <label for="email">Email</label>
      <input id="Email" name="user[email]" type="text" placeholder="Email" class="form-control" required="" value='<%= @user.email %>'>
      <!-- <span class="help-block">Email</span> -->
    </div>
    <!-- USERNAME-->
    <div class="form-group">
      <label for="username">User Name</label>
      <input id="username" name="user[username]" type="text" placeholder="User name" class="form-control" required="" value='<%= @user.username %>'>
      <!-- <span class="help-block">Username</span> -->
    </div>

    <!-- PASSWORD-->
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" name="user[password]" type="text" placeholder="Password" class="form-control" required="" value='******'>
      <!-- <span class="help-block">Password</span> -->
    </div>


    <div class='text-right'>
        <button class='btn btn-primary'>
            <i class='glyphicon glyphicon-save'></i>
            Save
        </button>
        <a href='/users' class='btn btn-danger'>
            <i class='glyphicon glyphicon-close'></i>
            Cancel
        </a>
    </div>

</form>
  </div>
</div>
